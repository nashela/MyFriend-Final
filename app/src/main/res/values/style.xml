<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="editTextName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="startIconDrawable">@drawable/ic_person</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:hint">@string/name</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="startIconTint">@color/md_theme_light_primary</item>
        <item name="endIconTint">@color/md_theme_light_primary</item>
        <item name="hintTextColor">@color/md_theme_light_primary</item>
    </style>

    <style name="editTextSchool">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="startIconDrawable">@drawable/ic_school</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:hint">@string/school</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
        <item name="startIconTint">@color/md_theme_light_primary</item>
        <item name="endIconTint">@color/md_theme_light_primary</item>
        <item name="hintTextColor">@color/md_theme_light_primary</item>
    </style>

    <style name="editTextBio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="startIconDrawable">@drawable/ic_bio</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:hint">@string/bio</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="startIconTint">@color/md_theme_light_primary</item>
        <item name="endIconTint">@color/md_theme_light_primary</item>
        <item name="hintTextColor">@color/md_theme_light_primary</item>
    </style>

    <style name="imagePhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_300sdp</item>
        <item name="android:background">@drawable/placeholder_avatar</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="backgroundParent">
        <item name="android:background">@color/yellow_splash</item>
    </style>

    <style name="backgroundAppBar">
        <item name="android:background">@color/md_theme_light_primary</item>
    </style>

    <style name="customToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>
</resources>